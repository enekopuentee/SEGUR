ordezkapenak = {
    'X': 'E',
    'E': 'A',
    'K': 'R',
    'I': 'O',
    'C': 'I',
    'J': 'N',
    'T': 'L',
    'A': 'D',
    'R': 'C',
    'Z': 'U',
    'H': 'T',
    'N': 'S',
    'P': 'M',
    'D': 'P',
    'Q': 'B',
    'O': 'F',
    'V': 'Y',
    'v': 'V',
    'S': 'Q',
    'G': 'J',
    'U': 'G',
    'M': 'H',
    'F': 'X',
    'L': 'Z',   
}


def errepikapenak(testua, top=1000):
    letrak = re.findall(r"[A-Za-zÑñ]", testua)
    return Counter(letrak).most_common()

   

def ordezkapena(testua, mapa):
    emaitza = ""
    for letra in testua:
        if letra in mapa:
            emaitza += mapa[letra]
        else:
            emaitza += letra
    return emaitza



testua_aldatuta = ordezkapena(testua, ordezkapenak)

print("Testua aldatuta: ", testua_aldatuta)
print("Letren errepikapenak: ", errepikapenak(testua, top=1000))

